<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">



        <ImageView
            android:id="@+id/diceRight"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/diceLeft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonRollDice"
            android:layout_height="@dimen/diceSize"
            android:src="@drawable/dice_0" />

        <ImageView
            android:id="@+id/diceLeft"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@id/diceRight"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="@dimen/diceSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonRollDice"
            android:src="@drawable/dice_0" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRollDice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/marginMain"
        android:background="@color/button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/roll" />


</androidx.constraintlayout.widget.ConstraintLayout>